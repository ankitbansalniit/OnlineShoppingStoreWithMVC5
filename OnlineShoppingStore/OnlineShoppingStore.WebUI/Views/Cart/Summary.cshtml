@model OnlineShoppingStore.Domain.Entities.Cart
<div class="pull-right">
    @Html.ActionLink("Checkout", "Index", "Cart", new { returnUrl = Request.Url?.PathAndQuery }, new { @class = "btn btn-danger navbar-btn" })&nbsp;
</div>
<div class="navbar-text pull-right">
    <b>Your Cart:</b>
    @Model.Lines.Sum(x => x.Quantity) item(s),
    @Model.ComputerTotalValue().ToString("C")
</div>
